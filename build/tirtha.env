### Runtime / Host
GUNICORN_PORT=8000
POSTGRES_PORT_HOST=8001
RMQ_WEB_POST_HOST=15672
HOST_IP=0.0.0.0  # CHANGEME: Replace with your actual host IP

### Paths / Deployment
PRE_URL=project/tirtha/            # CHANGEME: prefix for serving static/media
PROD_DIR=/var/www/tirtha/prod/     # CHANGEME: production artifact path
NFS_DIR=/var/www/tirtha/archive/   # CHANGEME: archive/NFS path
DBBACKUP_LOCATION=${NFS_DIR}db_backups/

### Database
DB_NAME=dbtirtha
DB_USER=dbtirthauser
DB_PWD=   # CHANGEME: set DB password
DB_HOST=localhost
DB_PORT=   # CHANGEME: set if not using default
POSTGRES_PASSWORD=   # CHANGEME: postgres superuser password (if used)

### RabbitMQ / Celery
RMQ_USER=rmqtirthauser
RMQ_PWD=   # CHANGEME: set RMQ password
RMQ_VHOST=rmqtirtha
RMQ_HOST=localhost

### Secret & runtime flags
SECRET_KEY=   # CHANGEME: generate using Django utils or a secure generator
DEBUG=False    # CHANGEME: Set to False for production
TIME_ZONE=Asia/Kolkata

### Admin / Users
DEFAULT_USER_NAME=Tirtha Admin
DEFAULT_USER_MAIL=tadmin@example.com
DJANGO_SUPERUSER_NAME=dbadmin
DJANGO_SUPERUSER_EMAIL=
DJANGO_SUPERUSER_PASSWORD=   # CHANGEME: set superuser password for initial setup

### Google OAuth (optional)
GOOGLE_LOGIN=False
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

### ARK
ARK_NAAN=999999   # CHANGEME: set NAAN for your tenant
ARK_SHOULDER=/a   # CHANGEME: set shoulder
BASE_URL=http://$HOST_IP:$GUNICORN_PORT

### Worker / Model binaries and paths
COLMAP_PATH=colmap                    # CHANGEME: path to colmap executable
GS_MAX_ITER=20000
ALICEVISION_DIRPATH=bin21             # relative path inside project (or absolute)
NSFW_MODEL_DIRPATH=nn_models/nsfw_model/mobilenet_v2_140_224/
MANIQA_MODEL_FILEPATH=static/artifacts/ckpt_kadid10k.pt
OBJ2GLTF_PATH=obj2gltf
GLTFPACK_PATH=gltfpack

### Meshops limits
MESHOPS_MIN_IMAGES=10
MESHOPS_MAX_IMAGES=500
MESHOPS_CONTRIB_DELAY=0.005
FILE_UPLOAD_MAX_MEMORY_SIZE=20971520   # 20 MiB
DATA_UPLOAD_MAX_NUMBER_FILES=2000

### Email settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=   # CHANGEME: Your email address
EMAIL_HOST_PASSWORD=   # CHANGEME: Your email password or app password
DEFAULT_FROM_EMAIL=${DEFAULT_USER_MAIL}
SERVER_EMAIL=${DEFAULT_FROM_EMAIL}

### Contributor notifications
MAIL_CONTRIB_TOGGLE=False
CONTRIB_IGNORE_LIST=${DEFAULT_USER_MAIL},${SERVER_EMAIL}
